[req]
prompt             = no
distinguished_name = req_distinguished_name
x509_extensions    = v3_req

[req_distinguished_name]
# Adjust these fields as you wish; they're not critical for local dev
C  = US
ST = State
L  = City
O  = MyOrg
OU = MyOrgUnit
CN = localhost

[v3_req]
# The keyUsage must allow keyEncipherment & digitalSignature for TLS
keyUsage         = critical, digitalSignature, keyEncipherment
# extendedKeyUsage serverAuth ensures it's recognized as a server cert
extendedKeyUsage = serverAuth
subjectAltName   = @alt_names

[alt_names]
# If you want your cert valid for both localhost and 127.0.0.1
DNS.1 = localhost
IP.1  = 127.0.0.1